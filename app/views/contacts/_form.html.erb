<%= form_for(@contact) do |f| %>
  <% if @contact.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@contact.errors.count, "error") %> 错误:</h2>

      <ul>
      <% @contact.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label "姓名（必须）" %><br>
    <%= f.text_field :full_name %>
  </div>
  <div class="field">
    <%= f.label "称谓/头衔" %><br>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label "公司" %><br>
    <%= f.text_field :company %>
  </div>
  <div class="field">
    <%= f.label "联系电话" %><br>
    <%= f.text_field :phone %>
  </div>
  <div class="field">
    <%= f.label :email %><br>
    <%= f.text_field :email %>
  </div>
  <div class="field">
    <%= f.label "QQ" %><br>
    <%= f.text_field :qq %>
  </div>
  <div class="field">
    <%= f.label "微博" %><br>
    <%= f.text_field :weibo %>
  </div>
  <div class="field">
    <%= f.label "网站" %><br>
    <%= f.text_field :website %>
  </div>
  <div class="field">
    <%= f.label "背景资料" %><br>
    <%= f.text_area :background_info %>
  </div>
  <div class="actions">
    <%= f.submit "保存"%>
  </div>
<% end %>
